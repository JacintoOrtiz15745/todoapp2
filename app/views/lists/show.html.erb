<center>

<table class="table is-triped">
  <thead>
    <tr>
      <th><%= @list.name %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @list.tasks.each do |task| %>
    </tr>
    <tr>
      <td><%= task.task %></td>
      <td>
        <%= link_to 'Edit', edit_task_path(task), class: "button is-success"%>
        <%= link_to 'Destroy', task, method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>


<br>

<h2>Add a task:</h2>
<br>
<%= form_with(model: [ @list, @list.tasks.build ], local: true) do |form| %>

  <p>
    <%= form.text_area :task, class: "input is-link is-half", style: "width: 300px", placeholder: "Example things" %>
  </p>
  <br>
  <p>
    <%= form.submit class: "button is-link" %>
  </p>
<% end %>


<%= link_to 'Back', lists_path %>
</center>
