<center>

<h1>Lists</h1>

<table class="table is-triped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list , class: "button is-link"%>
        <%= link_to 'Edit', edit_list_path(list), class: "button is-success" %>
        <%= link_to 'Destroy', list, method: :delete, class: "button is-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

