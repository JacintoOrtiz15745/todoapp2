<!DOCTYPE html>
<html>
  <head>
    <title>Todoapp2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">

          <a class="navbar-item" href="views/welcome/index.html.erb">
            Home
            <% link_to 'Home', welcome_index_path, :class => 'button is-link' %>
          </a>

          <a class="navbar-item">
            Documentation
          </a>

          <div class="navbar-item has-dropdown is-hoverable">
            <% if current_user.present? %>

            <a class="navbar-link">
              Options

              <div class="navbar-dropdown">
              <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-item' %>
              <%end%>
              <a class="navbar-item">
                Jobs
              </a>
              <a class="navbar-item">
                Contact
              </a>
              <hr class="navbar-divider">
              <a class="navbar-item">
                Report an issue
              </a>
            </div>
            </a>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if user_signed_in? %>
              Welcome <strong><%= current_user.email %></strong>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'button is-warning'  %>
              <% else %>
              <%= link_to "Sign up", new_user_registration_path, :class => 'button is-primary'  %>

              <%= link_to "Log in", new_user_session_path, :class => 'button is-light'  %>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </nav>
  <%= yield %>
  </body>
</html>
